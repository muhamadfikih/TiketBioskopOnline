<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Activity.Daftar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#dddddd" />

    <TextView
        android:id="@+id/Saldousername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#e50914" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="#dddddd" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e50914"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/Saldopwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#e50914"
            android:inputType="textPassword"
            android:textColor="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Choose Balance :"
        android:textColor="#dddddd" />

    <RadioGroup
        android:id="@+id/Isisaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/Saldosatujuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#e50914"
            android:text="1.000.000"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/Saldolimaratus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#e50914"
            android:text="500.000"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/Saldoseratus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#e50914"
            android:text="100.000"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/Saldolimapuluh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="#e50914"
            android:text="50.000"
            android:textColor="#ffffff" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Saldo yang di pilih"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/pilihSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Saldo anda saat ini"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/noSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="Total Saldo"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalnoSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnIsi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#e50914"
        android:text="TOP UP SALDO"
        android:textColor="#ffffff" />

</LinearLayout>